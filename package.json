{
  "name": "scapi",
  "version": "1.0.0",
  "description": "SCAPI – Digitaler Produkt-Katalog für Sanitär-Hersteller",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:publish": "vite build && electron-builder --publish always",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "product-catalog",
    "scraper"
  ],
  "author": "SCAPI",
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^6.8.3",
    "framer-motion": "^11.0.8",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.3",
    "xlsx": "^0.18.5",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.scapi.app",
    "productName": "SCAPI Produktkatalog",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SCAPI Produktkatalog"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "extension/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "extension",
        "to": "extension"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "SCAPI-App",
      "repo": "scapi-releases",
      "releaseType": "release"
    }
  }
}